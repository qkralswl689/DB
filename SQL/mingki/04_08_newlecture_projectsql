--getNoticeList (목록)
select rownum, notice.* from notice order by regdate desc;

-- 서브쿼리 활용
SELECT * FROM(
    select rownum num, n.* 
    from(select * from notice order by regdate desc)n
)
where num between 6 and 10;

-- 위 SQL문과 같은 결과
SELECT * FROM(
    SELECT ROW_NUMBER() OVER (ORDER BY REGDATE DESC) NUM,
        NOTICE.* FROM NOTICE
)    
where num between 6 and 10;
--getNoticeCount

--getNextNotice ( 현재 아이디보다 regdate가 더 큰 자료를 정렬후 첫번째 자료 가져오기 => 현재 글의 다음글 가져오기
SELECT * FROM NOTICE
WHERE ID = (
    SELECT ID FROM NOTICE
    WHERE REGDATE > (SELECT REGDATE FROM NOTICE WHERE ID=3)
    AND ROWNUM =1
);

--getPrevNotice

SELECT * FROM (SELECT * FROM NOTICE ORDER BY REGDATE DESC)
WHERE ID = (
    SELECT ID FROM NOTICE
    WHERE REGDATE < (SELECT REGDATE FROM NOTICE WHERE ID=3 )
    AND ROWNUM = 1 
);